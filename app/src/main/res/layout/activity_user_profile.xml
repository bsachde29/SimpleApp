<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/email_su"
        android:layout_width="309dp"
        android:layout_height="40dp"
        android:layout_marginStart="51dp"
        android:layout_marginTop="120dp"
        android:layout_marginEnd="51dp"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:hint="Email"

        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/phNumber_su"
        android:layout_width="309dp"
        android:layout_height="40dp"
        android:layout_marginStart="51dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="51dp"

        android:inputType="textPersonName"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:hint="Mobile Number"

        app:layout_constraintTop_toBottomOf="@+id/firstName_su" />

    <EditText
        android:id="@+id/pass_su"
        android:layout_width="309dp"
        android:layout_height="40dp"
        android:layout_marginStart="51dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="51dp"


        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:hint="Password"
        android:inputType="textPassword"

        app:layout_constraintTop_toBottomOf="@+id/phNumber_su" />

    <EditText
        android:id="@+id/pass_su2"
        android:layout_width="309dp"
        android:layout_height="40dp"
        android:layout_marginStart="51dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="51dp"

        android:inputType="textPassword"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:hint="Re-type Password"
        app:layout_constraintTop_toBottomOf="@+id/pass_su" />

    <EditText
        android:id="@+id/firstName_su"
        android:layout_width="126dp"
        android:layout_height="40dp"
        android:layout_marginStart="51dp"
        android:layout_marginTop="15dp"

        android:inputType="textPersonName"

        app:layout_constraintStart_toStartOf="parent"

        android:hint="First Name"

        app:layout_constraintTop_toBottomOf="@+id/email_su" />

    <EditText
        android:id="@+id/lastName_su"
        android:layout_width="126dp"
        android:layout_height="40dp"
        android:layout_marginEnd="51dp"
        android:layout_marginTop="15dp"

        android:inputType="textPersonName"

        android:hint="Last Name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/email_su" />



    <EditText
        android:id="@+id/editTextTextPersonName"
        android:layout_width="309dp"
        android:layout_height="40dp"
        android:layout_marginStart="51dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="51dp"
        android:ems="10"
        android:hint="Mother's maiden name"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pass_su2" />
</androidx.constraintlayout.widget.ConstraintLayout>