<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/prof"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfilePageActivity">

    <TextView
        android:id="@+id/buyerName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="100dp"
        android:layout_marginTop="70dp"
        android:text="Jon Doe"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/UserIcon"
        android:layout_width="13dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="49dp"
        android:layout_marginTop="70dp"
        android:layout_marginEnd="20dp"
        android:text="@string/fa_User"
        android:textSize="30sp"
        app:layout_constraintEnd_toStartOf="@+id/buyerName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/gotoDetails"
        android:layout_width="325dp"
        android:layout_height="45dp"
        android:layout_marginTop="40dp"
        android:foregroundGravity="center_vertical|clip_horizontal"
        android:gravity="center_vertical"
        android:text="Modify Account Details"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buyerName" />

    <TextView
        android:id="@+id/GotoSellerDetails"
        android:layout_width="325dp"
        android:layout_height="45dp"
        android:layout_marginTop="30dp"
        android:foregroundGravity="center_vertical|clip_horizontal"
        android:gravity="center_vertical"
        android:text="Seller Details"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/GotoAddAddress" />

    <TextView
        android:id="@+id/GotoOrder"
        android:layout_width="325dp"
        android:layout_height="45dp"
        android:layout_marginTop="30dp"
        android:foregroundGravity="center_vertical|clip_horizontal"
        android:gravity="center_vertical"
        android:text="Purchase History"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/GotoSellerDetails" />

    <TextView
        android:id="@+id/GotoAddAddress"
        android:layout_width="325dp"
        android:layout_height="45dp"
        android:layout_marginTop="30dp"
        android:foregroundGravity="center_vertical|clip_horizontal"
        android:gravity="center_vertical"
        android:text="Manage Addresses"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gotoDetails" />
</androidx.constraintlayout.widget.ConstraintLayout>